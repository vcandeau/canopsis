[{
	"name":  "Weather",
	"version": 0.1,
	"author": "capensis",
	"website": "http://www.canopsis.org",
	"xtype": "weather",
	"description": "Display selector SLA as weather icons with percent availability.",
	"refreshInterval": 60,
	"border" : true,
	"locales": ["fr"],
	"options": [
			{
				"title" : "Options",
				"items" : [{
					"xtype": "fieldset",
					"title": "Display options",
					"collapsible": false,
					"items": [{
						"xtype": "numberfield",
						"fieldLabel": "Default padding",
						"value": 3,
						"minValue": 0,
						"name": "defaultPadding",
						"allowBlank": true
					},{
						"xtype": "numberfield",
						"fieldLabel": "Default margin",
						"value": 3,
						"minValue": 0,
						"name": "defaultMargin",
						"allowBlank": true
					},{
						"xtype": "numberfield",
						"fieldLabel": "Default height",
						"value" : 100,
						"minValue": 0,
						"name": "defaultHeight",
						"allowBlank": true
					},{
						"xtype": "colorfield",
						"fieldLabel": "impair brick background color",
						"name": "bg_impair_color",
						"allowBlank": false,
						"value": "#FAFAFA"
					},{
						"xtype": "colorfield",
						"fieldLabel": "pair brick background color",
						"name": "bg_pair_color",
						"allowBlank": false,
						"value": "#FFFFFF"
					},{
						"xtype": "checkbox",
						"fieldLabel": "Use SLA state as icon value",
						"labelWidth":200,
						"inputValue": true,
						"uncheckedValue": false,
						"checked": false,
						"name": "state_as_icon_value"
					},{
						"xtype": "numberfield",
						"fieldLabel": "Icon type",
						"maxValue": 2,
						"minValue": 1,
						"value": 1,
						"name": "iconSet"
					}]
				}]
			},
			{
				"title" : "Selectors",
				"items" : [{
					"xtype":"cinventory",
					"name" : "nodes",
					"multiSelect": true,
					"event_type": "selector",
					"base_filter" : {"$or":[{"event_type":"selector"},{"event_type":"sla"}]}
				}]
			}
	]
}]
