[{
	"name":  "Weather",
	"version": 0.1,
	"author": "capensis",
	"website": "http://www.canopsis.org",
	"xtype": "weather",
	"description": "Display live stream",
	"refreshInterval": 60,
	"border" : true,
	"locales": ["fr"],
	"options": [
			{
				"title" : "Options",
				"items" : [{
					"xtype": "fieldset",
					"title": "Display options",
					"collapsible": false,
					"items": [{
						"xtype": "textfield",
						"fieldLabel": "Default padding",
						"value": "3",
						"name": "defaultPadding"
					},{
						"xtype": "textfield",
						"fieldLabel": "Default height",
						"value" : 100,
						"name": "defaultHeight"
					}]
				},{
					"xtype": "fieldset",
					"title": "Values",
					"collapsible": false,
					"items": [{
						"xtype": "checkbox",
						"fieldLabel": "Use selector state as icon value",
						"checked": false,
						"name": "state_as_icon_value"
					}]
				}]
			},
			{
				"title" : "Selectors",
				"items" : [{
					"xtype":"cinventory",
					"name" : "nodes",
					"multiSelect": true,
					"event_type": "selector",
					"base_filter" : {"event_type":"selector"}
				}]
			}
