#!/bin/bash

NAME="pyperfstore"
VERSION=0.1
RELEASE=0
DESCRIPTION=""
REQUIRES="canohome pkgmgr python"

function pre_install(){
	echo "Pre-install $NAME $VERSION-$RELEASE ..."
	check_code $? 
}

function post_install(){
	echo "Post-install $NAME $VERSION-$RELEASE ..."

	mkdir -p $PREFIX/tmp

	launch_cmd "cd $PREFIX/tmp && tar xfz $NAME.tgz"
        check_code $? "Impossible to extract archive"

        launch_cmd "cd $PREFIX/tmp/$NAME && python setup.py install"
        check_code $? "Setup.py install failure"
}

function pre_remove(){
	echo "Pre-remove $NAME $VERSION-$RELEASE ..."
	check_code $?
}

function post_remove(){
	echo "Post-remove $NAME $VERSION-$RELEASE ..."
	check_code $?
}

function pre_update(){
	echo "Pre-update $NAME $VERSION-$RELEASE ..."
	check_code $?
}

function post_update(){
	echo "Post-update $NAME $VERSION-$RELEASE ..."
	check_code $?
}

function purge(){
	echo "Purge $NAME $VERSION-$RELEASE ..."
	check_code $?
}
