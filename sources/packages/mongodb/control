#!/bin/bash

NAME="mongodb"
VERSION=1.8.1
RELEASE=0
DESCRIPTION=""
REQUIRES="canohome pkgmgr"

function install(){
	echo "Install $NAME $VERSION-$RELEASE ..."
	mkdir -p $PREFIX/var/log/mongodb
	mkdir -p $PREFIX/var/lib/mongodb
	check_code $?
}

function remove(){
	echo "Remove $NAME $VERSION-$RELEASE ..."
	service mongodb stop
	#check_code $?
}

function purge(){
	echo "Purge $NAME $VERSION-$RELEASE ..."
	rm -Rf $PREFIX/var/lib/mongodb
	rm -Rf $PREFIX/var/log/mongodb
	#check_code $?
}

function update(){
	echo "Update $NAME $VERSION-$RELEASE ..."
	check_code $?
}
