#!/bin/bash

NAME="nginx"
VERSION=1.4.0
RELEASE=0
DESCRIPTION=""
REQUIRES="canohome pkgmgr"

function install(){
	echo "Install $NAME $VERSION-$RELEASE ..."
	check_code $?
}

function remove(){
	echo "Remove $NAME $VERSION-$RELEASE ..."
	#sudo service nginx stop
	#check_code $?
}

function purge(){
	echo "Purge $NAME $VERSION-$RELEASE ..."
	rm -Rf $PREFIX/etc/nginx
	rm -Rf $PREFIX/var/log/nginx
	rm -Rf $PREFIX/var/run/nginx.*
	#check_code $?
}

function update(){
	echo "Update $NAME $VERSION-$RELEASE ..."
	check_code $?
}
