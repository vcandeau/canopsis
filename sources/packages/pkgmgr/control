#!/bin/bash

NAME="pkgmgr"
VERSION=0.1
RELEASE=0
DESCRIPTION=""
REQUIRES="canohome"

NO_ARCH=true
NO_DIST=true
NO_DISTVERS=true

function pre_install(){
	echo "Pre-install $NAME $VERSION-$RELEASE ..."
	check_code $? 
}

function post_install(){
	echo "Post-install $NAME $VERSION-$RELEASE ..."
	mkdir -p $PREFIX/var/lib/pkgmgr/packages
	check_code $? 
}

function pre_remove(){
	echo "Pre-remove $NAME $VERSION-$RELEASE ..."
	check_code $?
}

function post_remove(){
	echo "Post-remove $NAME $VERSION-$RELEASE ..."
	check_code $?
}

function pre_update(){
	echo "Pre-update $NAME $VERSION-$RELEASE ..."
	check_code $?
}

function post_update(){
	echo "Post-update $NAME $VERSION-$RELEASE ..."
	check_code $?
}

function purge(){
	echo "Purge $NAME $VERSION-$RELEASE ..."
	rm -Rf $PREFIX/var/lib/pkgmgr/packages
	rm -Rf $PREFIX/var/lib/pkgmgr/local_db
	rm -Rf $PREFIX/var/lib/pkgmgr/remote_db
	rm -Rf $PREFIX/var/log/pkgmgr
}
