#!/bin/bash

NAME="pkgmgr"
VERSION=1
RELEASE=0
DESCRIPTION=""
REQUIRES="canohome"

function install(){
	echo "Install $NAME $VERSION-$RELEASE ..."
	mkdir -p $PREFIX/var/lib/pkgmgr/packages
	check_code $?
}

function remove(){
	echo "Remove $NAME $VERSION-$RELEASE ..."
	check_code $?
}

function purge(){
	echo "Purge $NAME $VERSION-$RELEASE ..."
	rm -Rf $PREFIX/var/lib/pkgmgr/packages
	rm -Rf $PREFIX/var/lib/pkgmgr/local_db
	rm -Rf $PREFIX/var/lib/pkgmgr/remote_db
	rm -Rf $PREFIX/var/log/pkgmgr
	#check_code $?
}

function update(){
	echo "Update $NAME $VERSION-$RELEASE ..."
	check_code $?
}
