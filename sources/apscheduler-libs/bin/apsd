#!/usr/bin/env python
from apscheduler.scheduler import Scheduler
from apschedulerlibs.cmongodbjobstore import CMongoDBJobStore
import logging
import time
import string

# Logger
logging.basicConfig(filename='/opt/canopsis/var/log/apsd.log', level=logging.DEBUG,
	format='%(levelname)s[%(asctime)s]: %(message)s')
logger = logging.getLogger('APSD')

# Init
sched = Scheduler()
c = {
	"daemonic": "True",
	"apscheduler.jobstore.cmongodbjobstore.class": "apschedulerlibs.cmongodbjobstore:CMongoDBJobStore",
	"apscheduler.jobstore.cmongodbjobstore.database": "canopsis",
	"apscheduler.jobstore.cmongodbjobstore.collection": "task"
}
logger.info('Config: %s' % c)
sched.configure(c)
sched.start()

def main_loop():
	counter = 0
	while 1:
		counter += 1
		if counter >= 60:
			counter = 0
			for js in sched._jobstores:
				if isinstance(sched._jobstores[js], CMongoDBJobStore):
					sched._jobstores[js].check_and_refresh()
		time.sleep(0.1)

# Main
if __name__ == '__main__':
	sched.print_jobs()
	try:
		main_loop()
	except KeyboardInterrupt:
		logger.info('Exiting by user request')
		print('Exiting by user request')
		sched.shutdown()
	finally:
		sched.shutdown()
